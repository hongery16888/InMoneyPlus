<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.magic.inmoney.viewmodel.statistics.StatisticsViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:keepScreenOn="true"
        tools:context="com.magic.upcoming.games.fragment.GameMainFragment">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:gravity="center"
            android:text="突破5日均线回调统计"
            android:paddingEnd="@dimen/dp_50"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/total_info"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/dp_10"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/nav_app_bar_navigate_up_description"
            android:src="@drawable/ic_info"
            android:tint="?attr/colorOnBackground" />

        <ImageView
            android:id="@+id/update"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/dp_12"
            android:layout_toStartOf="@id/more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/nav_app_bar_navigate_up_description"
            android:src="@drawable/ic_update"
            android:tint="?attr/colorOnBackground" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/dp_12"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/nav_app_bar_navigate_up_description"
            android:src="@drawable/ic_more"
            android:tint="?attr/colorOnBackground" />

        <LinearLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/title">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:gravity="center"
                android:textSize="12sp"
                android:text="股票名称"/>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="达标"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/dp_5"/>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新高"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/dp_5"/>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="赚1%"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/dp_5"/>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="亏损"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/dp_5"/>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收盘盈"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/dp_5"/>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收盘亏"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/dp_5"/>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="成功率"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/dp_5"/>

        </LinearLayout>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_below="@id/tab"
            android:layout_above="@id/bottom_horizontal_line_view"
            app:srlAccentColor="@android:color/white"
            app:srlEnableHeaderTranslationContent="false"
            app:srlEnableLoadMore="true"
            app:srlPrimaryColor="@color/colorPrimary">

            <com.scwang.smart.refresh.header.MaterialHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statistics_stock_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="@color/colorBackground"
                android:overScrollMode="never"/>

            <com.scwang.smart.refresh.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="#888"
                app:srlClassicsSpinnerStyle="Translate"
                app:srlDrawableProgress="@drawable/ic_progress" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <TextView
            android:id="@+id/empty_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/empty_list"
            android:drawablePadding="@dimen/margin_normal"
            android:text="@string/no_games_match_filter_options"
            android:visibility="@{viewModel.emptyStatus ? View.VISIBLE : View.GONE}"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/game_cover_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/game_cover"
            android:layout_centerInParent="true"
            android:visibility="visible"/>


        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/indeterminate_progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:visibility="@{viewModel.initData ? View.VISIBLE : View.GONE}"/>

        <ProgressBar
            android:id="@+id/determinate_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/updating_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center"
            android:text="@string/updating_game_database"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_centerInParent="true"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="gone"/>

        <View
            android:id="@+id/bottom_horizontal_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="@dimen/bottom_horizontal_bar_alpha"
            android:background="?attr/colorOnBackgroundMediumContrast"
            android:layout_alignParentBottom="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/title"
            android:background="@drawable/line_gradient" />

        <ImageView
            android:id="@+id/prompt_btn"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_100"
            android:layout_marginEnd="@dimen/dp_10"
            android:visibility="gone"/>

        <com.magic.inmoney.view.SpecialProgressBarView
            android:id="@+id/loading_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_20"
            android:visibility="@{viewModel.initData ? View.VISIBLE : View.GONE}"
            app:startDrawable="@drawable/ic_up_up_up"
            app:endSuccessDrawable="@drawable/ic_done_white_36dp"
            app:textSize="18sp"
            app:textColorSuccess="#66A269"
            app:textColorNormal="#FF5722"
            app:textColorError="#BC5246"
            app:progressBarHeight="4dp"
            app:progressBarBgColor="#491C14"
            app:progressBarColor="#FF5722"
            app:canReBackable="true"
            app:canDragable="false"/>

    </RelativeLayout>
</layout>