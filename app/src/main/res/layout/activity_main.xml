<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:background="@android:color/white">

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:elevation="16dp"
        app:cnb_addBottomInset="true"
        app:cnb_addLeftInset="true"
        app:cnb_addRightInset="true"
        app:cnb_menuResource="@menu/navigation_menu"
        app:cnb_orientationMode="horizontal" />

    <com.magic.inmoney.view.VerticalViewpager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_menu"/>

    <ImageButton
        android:id="@+id/filter_btn"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/nav_app_bar_navigate_up_description"
        android:src="@drawable/ic_filter_x"
        android:tint="?attr/colorOnBackground" />

    <ImageView
        android:id="@+id/favorite_btn"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:padding="@dimen/dp_15"
        android:layout_toEndOf="@id/filter_btn"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/nav_app_bar_navigate_up_description"
        android:src="@drawable/ic_favorites"
        android:tint="?attr/colorOnBackground" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginEnd="44dp"
        android:orientation="vertical">
        <TextView
            android:text="上证指数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/sh_point"
            android:text="3224"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/sh_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10.00    -1.01%"
            android:textSize="11sp"/>
    </LinearLayout>
</RelativeLayout>